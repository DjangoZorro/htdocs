{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-caption d-none d-md-block">
        <div class="col-md-4 offset-md-4">
          <div class="alert alert-primary" role="alert">
            {% if is_granted('ROLE_USER') %}
              <h5 class="text-body">Start making a reservation now, <br>simpel and quick!</h5>
              <br>
              <button type="button" class="btn btn-primary mx-auto" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Make a reservation</button>
            {% else %}
              <h5 class="text-body">Please Login or Register before <br>making a reservation!</h5>
              <br>
              <button type="button" class="btn btn-primary mx-auto" onclick="window.location.href='{{ path('fos_user_security_login') }}'">Login</button>
              <button type="button" class="btn btn-primary mx-auto" onclick="window.location.href='{{ path('fos_user_registration_register') }}'">Register</button>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="carousel-item active">
        <img src="{{ asset('images/indeximage2.jpg') }}" class="d-block w-100" alt="Hotel-Outside Preview Picture">
      </div>
      <div class="carousel-item">
        <img src="{{ asset('images/indeximage1.jpg') }}" class="d-block w-100" alt="Hotel-Inside Preview Picture">
      </div>
      <div class="carousel-item">
        <img src="{{ asset('images/indeximage3.jpg') }}" class="d-block w-100" alt="Hotel-Pool Picture">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>



  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New message</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Recipient:</label>
              <input type="text" class="form-control" id="recipient-name">
            </div>
            <div class="form-group">
              <label for="message-text" class="col-form-label">Message:</label>
              <textarea class="form-control" id="message-text"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Send message</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
