{% extends 'base.html.twig' %}

{% block title %}Logboek{% endblock %}

{% block body %}
    <h1>Logboek</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logboek.id }}</td>
            </tr>
            <tr>
                <th>Begeleidingsbrief</th>
                <td>{{ logboek.Begeleidingsbrief }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{{ logboek.Datum ? logboek.Datum|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Aantalm3</th>
                <td>{{ logboek.Aantalm3 }}</td>
            </tr>
            <tr>
                <th>Laadlocatie</th>
                <td>{{ logboek.Laadlocatie }}</td>
            </tr>
            <tr>
                <th>Vertrektijd</th>
                <td>{{ logboek.Vertrektijd ? logboek.Vertrektijd|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Bestemming</th>
                <td>{{ logboek.Bestemming }}</td>
            </tr>
            <tr>
                <th>Evenement</th>
                <td>{{ logboek.Evenement }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('logboek_index') }}">back to list</a>

    <a href="{{ path('logboek_edit', {'id': logboek.id}) }}">edit</a>

    {{ include('logboek/_delete_form.html.twig') }}
{% endblock %}
